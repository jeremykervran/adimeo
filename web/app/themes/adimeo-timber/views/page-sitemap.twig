<article class="sitemap">
    <h1>Plan du site</h1>

    <section>
        <h2>Articles</h2>
        <ul>
            {% for post in posts %}
                <li>
                    <a href="{{ post.link }}">{{ post.title }}</a> - {{ post.date|date('d/m/Y') }}
                </li>
            {% endfor %}
        </ul>
    </section>

    <section>
        <h2>Pages</h2>
        <ul>
            {% for page in pages %}
                <li>
                    <a href="{{ page.link }}">{{ page.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </section>
</article>
